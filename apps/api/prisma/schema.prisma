generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELED
  SHIPPED
}

enum PaymentMethod {
  CREDIT_CARD
  PAYPAL
  BANK_TRANSFER
}

model User {
  id        String  @id @default(uuid())
  clerkId   String  @unique
  firstName String
  lastName  String
  email     String
  phone     String?
  orders    Order[]
}

model Order {
  id              String   @id @default(uuid())
  userId          String
  orderDate       DateTime @default(now())
  status          OrderStatus
  totalPrice      Decimal
  paymentMethod   PaymentMethod
  paymentIntentId String
  shippingAddress String
  billingAddress  String
  user User @relation(fields: [userId], references: [id])
  orderItems OrderItem[]
}

model OrderItem{
  id String @id @default(uuid())
  orderId String 
  productId String 
  sizeId String 
  quantity Int
  price Decimal

  order Order @relation(fields: [orderId], references: [id])
  size Size @relation(fields: [sizeId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId, sizeId])
}

model Product{
  id String @id @default(uuid())
  idCategory String
  name String
  description String
  price Decimal
  promotion_price Decimal?

  category Category @relation(fields: [idCategory], references: [id])

  orderItems OrderItem[]
}

model Category{
  id String @id @default(uuid())
  name String
  
  products Product[]
  categorySizes CategorySize[]
}

model Size{
  id String @id @default(uuid())
  size String

  orderItems OrderItem[]
  categorySizes CategorySize[]
}

model CategorySize{
  idCategory String 
  idSize String 

  category Category @relation(fields: [idCategory], references: [id])
  size Size @relation(fields: [idSize], references: [id])

  @@id([idCategory, idSize])
}
