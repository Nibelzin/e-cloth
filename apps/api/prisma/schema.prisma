generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELED
  SHIPPED
}

enum PaymentMethod {
  CREDIT_CARD
  PAYPAL
  BANK_TRANSFER
}

model User {
  id        String  @id @default(uuid())
  clerkId   String  @unique
  firstName String
  lastName  String?
  email     String @unique
  phone     String?
  orders    Order[]
  addresses Address[]
}

model Order {
  id              String   @id @default(uuid())
  userId          String
  orderDate       DateTime @default(now())
  status          OrderStatus
  totalPrice      Decimal
  paymentMethod   PaymentMethod
  paymentIntentId String
  shippingAddressId String
  billingAddressId  String
  user User @relation(fields: [userId], references: [id])
  orderItems OrderItem[]

  shippingAddress Address @relation(name: "shipping_address", fields: [shippingAddressId], references: [id])
  billingAddress Address @relation(name: "billing_address", fields: [billingAddressId], references: [id])
}

model OrderItem{
  id String @id @default(uuid())
  orderId String 
  productId String 
  sizeId String 
  quantity Int
  price Decimal

  order Order @relation(fields: [orderId], references: [id])
  size Size @relation(fields: [sizeId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId, sizeId])
}

model Address{
  id String @id @default(uuid())
  userId String
  street String
  number String
  complement String?
  district String
  city String
  state String
  postalCode String
  isDefault Boolean @default(false)

  user User @relation(fields: [userId], references: [id])

  orders_shipping Order[] @relation("shipping_address")
  orders_billing Order[] @relation("billing_address")
}

model Product{
  id String @id @default(uuid())
  idCategory String
  name String
  description String
  price Decimal
  promotion_price Decimal?

  category Category @relation(fields: [idCategory], references: [id])
  orderItems OrderItem[]
  productImages ProductImage[]
}

model Category{
  id String @id @default(uuid())
  name String
  
  products Product[]
  categorySizes CategorySize[]
}

model Size{
  id String @id @default(uuid())
  size String

  orderItems OrderItem[]
  categorySizes CategorySize[]
}

model CategorySize{
  idCategory String 
  idSize String 

  category Category @relation(fields: [idCategory], references: [id])
  size Size @relation(fields: [idSize], references: [id])

  @@id([idCategory, idSize])
}

model ProductImage{
  id String @id @default(uuid())
  productId String
  url String
  alt String

  product Product @relation(fields: [productId], references: [id])
}
